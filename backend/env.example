# Database
MONGO_URI=mongodb://localhost:27017/ca-website
# For production, use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/ca-website?retryWrites=true&w=majority

# Server
PORT=5000
NODE_ENV=development

# JWT Secret (Generate a strong random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (Gmail or any SMTP service)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Frontend URL (for CORS - add your deployed frontend URL)
FRONTEND_URL=http://localhost:5173

# AI Chatbot API Keys (Free tier available)
# Get Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
# Get Groq API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here



